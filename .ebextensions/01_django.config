option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "GlobalNorth.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "GlobalNorth.wsgi:application"
    NumProcesses: 3
    NumThreads: 20
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
commands:
  01_upgrade_pip:
    command: "pip install --upgrade pip"
  02_install_pg_dependencies:
    command: "pip install psycopg2-binary"
container_commands:
  01_makemigrations:
    command: "source /var/app/venv/*/bin/activate && python manage.py makemigrations accounts home services payment"
    leader_only: true
  02_migrate:
    command: "source /var/app/venv/*/bin/activate && python manage.py migrate — noinput"
    leader_only: true
  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python manage.py collectstatic — noinput"
    leader_only: true