option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: GlobalNorth.wsgi:application
    NumProcesses: 3
    NumThreads: 20

container_commands:
  01_migrate:
    command: "python manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "python manage.py collectstatic --noinput"
    leader_only: true
  03_createsu:
    command: "python manage.py autom_createsuperuser"
    leader_only: true

packages:
  yum:
    postgresql-devel: []

commands:
  01_upgrade_pip:
    command: "pip install --upgrade pip"
  02_install_pg_dependencies:
    command: "pip install psycopg2-binary"