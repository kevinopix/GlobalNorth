packages:
  yum:
    git: []
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: "GlobalNorth.settings"
    PYTHONPATH: "/var/app/current:$PYTHONPATH"
  aws:elasticbeanstalk:container:python:
    WSGIPath: "GlobalNorth.wsgi:application"
    NumProcesses: 3
    NumThreads: 20
container_commands:
  00_test_output:
    command: "echo 'testing.....'"
  01_postgres_delete:
    command: yum remove -y postgresql postgresql-server
  02_postgres_install:
    command: sudo yum install -y https://download.postgresql.org/pub/repos/yum/12/redhat/rhel-6-x86_64/postgresql12-12.2-2PGDG.rhel6.x86_64.rpm https://download.postgresql.org/pub/repos/yum/12/redhat/rhel-6-x86_64/postgresql12-libs-12.2-2PGDG.rhel6.x86_64.rpm
  03_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations accounts home services Payment && python3 manage.py migrate --noinput"
    leader_only: true
